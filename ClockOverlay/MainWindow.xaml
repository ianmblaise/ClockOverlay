<Window x:Class="ClockOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ClockOverlay"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Name="_mainWindow"
        Width="70"
        Height="20"
        AllowsTransparency="True"
        Background="#00000000"
        BorderThickness="0,0,0,0"
        Foreground="#FFD2FDFB"
        Icon="Resources/Icon.ico"
        IsHitTestVisible="False"
        IsTabStop="False"
        Topmost="True"
        UseLayoutRounding="True"
        Visibility="Hidden"
        WindowStyle="None"
        mc:Ignorable="d">
    
    <Grid x:Name="_mainGrid"
          Margin="0,0,0,0"
          Background="#00000000"
          IsHitTestVisible="False">
        <TextBlock x:Name="_textTime"
                   FontFamily="Microsoft Sans Serif"
                   FontSize="16"
                   IsHitTestVisible="False"
                   Text="Unknown"
                   TextAlignment="Center" 
                   Visibility="Visible" FontStretch="ExtraExpanded">
            <TextBlock.Effect>
                <DropShadowEffect Direction="215" ShadowDepth="1" Color="#FF0073D3" Opacity="0.98" RenderingBias="Quality"/>
            </TextBlock.Effect>

        </TextBlock>
    </Grid>
</Window>
